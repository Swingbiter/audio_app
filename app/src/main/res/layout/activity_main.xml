            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="308dp"
            tools:layout_editor_absoluteX="160dp" android:id="@+id/recordButton"/>
    <Button
            android:text="STOP"
            android:layout_width="wrap_content"
